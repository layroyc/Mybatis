<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hp.dao.StudentDao">
	<resultMap type="Student" id="studentMap">
		<id column="sid" property="id"/>
		<result column="sname" property="username" />
		<result column="ssex" property="sex" />
		<result column="scid" property="cid" />
		<association property="zz" javaType="Clazz">
			<id column="zid" property="id"/>
			<result column="zcname" property="cname"/>
		</association>
	</resultMap>
	<select id="selectC" resultMap="studentMap">
		select s.id as sid,s.username as sname,s.cid as scid,z.id as zid,z.cname as zcname
		from student s join clazz z on s.id=z.id where s.id=#{id}
	</select>
</mapper>